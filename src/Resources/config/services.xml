<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <defaults autowire="true" autoconfigure="true" public="true"/>

        <service id="MobilisticsGmbH\MamoConnector\Service\PluginMerger" />
        <service id="MobilisticsGmbH\MamoConnector\Service\RequestAuthorizationService" />
        <service id="mobi.mamo-connector.http-client" class="GuzzleHttp\Client" />

        <service id="MobilisticsGmbH\MamoConnector\Service\ShopwareApiClient">
            <argument type="service" id="Shopware\Core\Framework\Store\Services\InstanceService" />
            <argument type="service" id="mobi.mamo-connector.http-client" />
        </service>

        <service id="MobilisticsGmbH\MamoConnector\Service\PlatformDataProvider">
            <argument type="service" id="Shopware\Core\Framework\Store\Services\InstanceService" />
            <argument type="service" id="mobi.mamo-connector.http-client" />
        </service>

        <service id="MobilisticsGmbH\MamoConnector\Service\ExtensionDataProvider">
            <argument type="service" id="plugin.repository" />
            <argument type="service" id="MobilisticsGmbH\MamoConnector\Service\ShopwareApiClient" />
            <argument type="service" id="MobilisticsGmbH\MamoConnector\Service\PluginMerger" />
        </service>

        <service id="MobilisticsGmbH\MamoConnector\Controller\Mamo\MetricsController" public="true">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

    </services>
</container>
